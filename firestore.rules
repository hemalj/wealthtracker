rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Accounts collection (flat, root-level) - users can only access their own accounts
    match /accounts/{accountId} {
      // Allow read if user owns the account (check userId field in document)
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Allow create if userId in request matches auth uid
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update/delete if user owns the account
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Transactions collection (flat, root-level)
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Holdings collection (flat, root-level)
    match /holdings/{holdingId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Portfolio snapshots collection
    match /portfolioSnapshots/{snapshotId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Symbols collection - read-only for all authenticated users, write for admins only
    match /symbols/{symbolId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Prices collection - read-only for all authenticated users, write for admins only
    match /prices/{priceId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Audit logs - admin only
    match /audit_logs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}